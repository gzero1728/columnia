{
  "name": "columnia",
  "private": false,
  "version": "1.0.0",
  "description": "A React hook for managing table columns in React applications.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "keywords": [
    "react",
    "hooks",
    "table",
    "columns",
    "typescript",
    "react-table",
    "flex-table",
    "flex-column"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gzero1728/columnia.git"
  },
  "author": "Jiyeong Gwon <gzero1728@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/gzero1728/columnia#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run src/**/*.test.ts"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^18.2.55",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^8.56.0",
    "jsdom": "^26.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.7.3",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "react": ">=18"
  }
}
